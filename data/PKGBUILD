# Maintainer: Konstantin Shalygin (kostya@opentech.ru)

pkgname='xwinclone'
pkgver=0.1f
pkgrel=1
pkgdesc='X window WINdow CLONE application'
arch=('any')
url='http://puszcza.gnu.org.ua/software/mailfromd'
depends=('xorg-server' 'libjpeg-turbo')
makedepends=('git')
license=('GPL')
source=("$pkgname::git+https://github.com/awpe/xwinclone.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$pkgname"
  git show -s | grep Version | awk '{print $2}'
}

build() {
  cd "$pkgname"
  mkdir "obj"
  make
}

package() {
  pushd "$pkgname"
  install -Dm775 "$pkgname" "$pkgdir/usr/bin/xwinclone"
  popd
}
