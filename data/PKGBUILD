# Maintainer: Konstantin Shalygin (kostya@opentech.ru)

pkgname='xwinclone'
pkgver='0.1n'
pkgrel='1'
pkgdesc="Used to translate another window's content in its own window"
arch=('any')
url="https://github.com/awpe/${pkgname}"
depends=('xorg-server-common' 'libxmu' 'imlib2' 'libxcomposite' 'libjpeg-turbo')
makedepends=('git')
license=('GPL')
source=("$pkgname::git+${url}")
sha256sums=('SKIP')

prepare() {
  cd "${pkgname}"
  git checkout x
  mkdir "obj"
}

build() {
  cd "${pkgname}"
  make
}

package() {
  pushd "${pkgname}"
  install -Dm775 "${pkgname}" "$pkgdir/usr/bin/${pkgname}"
  popd
}
